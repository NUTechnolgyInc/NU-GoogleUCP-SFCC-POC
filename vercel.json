{
    "version": 2,
    "rewrites": [
        {
            "source": "/api",
            "destination": "/api/index.py"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/$1"
        }
    ],
    "outputDirectory": "apps/chat-client/dist",
    "env": {
        "USE_SCAPI": "true"
    }
}