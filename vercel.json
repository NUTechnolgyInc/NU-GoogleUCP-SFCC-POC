{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "includeFiles": "apps/business_agent/**"
            }
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "api/index.py"
        },
        {
            "source": "/api",
            "destination": "api/index.py"
        },
        {
            "source": "/(.*)",
            "destination": "/$1"
        }
    ],
    "env": {
        "USE_SCAPI": "true"
    }
}