{
  "version": 2,
  "name": "nu-googleucp-sfcc-poc",
  "builds": [
    {
      "src": "a2a/chat-client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "rest/nodejs/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "a2a/business_agent/src/business_agent/main.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/a2a/business_agent/src/business_agent/main.py"
    },
    {
      "source": "/rest/node/(.*)",
      "destination": "/rest/nodejs/src/index.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/a2a/chat-client/$1"
    }
  ],
  "env": {
    "USE_SCAPI": "true"
  }
}
